BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            # call the handle_calculate method in the app class when text is entered
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                # call the handle_modify method in the app class when pressed, increase value by 1
                on_press: app.handle_modify(1)
            Button:
                text: 'Down'
                # call the handle_modify_method in the app class when pressed, decreased value by 1
                on_press: app.handle_modify(-1)
